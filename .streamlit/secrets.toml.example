# Streamlit Secrets 설정 예시 (로컬 테스트용)
# 이 파일을 복사하여 secrets.toml로 이름을 변경하고 실제 값을 입력하세요
# ⚠️ secrets.toml은 Git에 커밋하지 마세요!

# ============================================================================
# 베타 로그인 인증 정보 (앱 접근 제한용)
# ============================================================================
[general]
# 와일드카드 "*"를 사용하면 모든 이메일이 해당 비밀번호로 로그인 가능
authorized_users = [
    {"email": "*", "password": "1228"}
]

# 특정 이메일만 허용하려면:
# authorized_users = [
#     {"email": "user1@example.com", "password": "password1"},
#     {"email": "user2@example.com", "password": "password2"}
# ]

# ============================================================================
# 외부 API 키 (Gemini API 사용)
# ============================================================================
[external_api]
gemini_api_key = "YOUR_GEMINI_API_KEY_HERE"

# 또는 루트 레벨에서:
# GEMINI_API_KEY = "YOUR_GEMINI_API_KEY_HERE"
# GEMINI_MODEL = "gemini-2.5-flash"

# ============================================================================
# PostgreSQL DB 접속 정보 (분석 결과 저장용)
# ============================================================================
[connections.postgresql]
dialect = "postgresql"
host = "db.hcdhiiuoasbfgvoyoyli.supabase.co"
port = 5432
database = "postgres"
username = "postgres"
password = "YOUR_DB_PASSWORD_HERE"

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT = "development"
DEBUG = "true"
LOG_LEVEL = "DEBUG"
