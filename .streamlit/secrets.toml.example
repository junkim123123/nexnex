# Streamlit Secrets Template
# 
# ⚠️ 중요: 이 파일을 .streamlit/secrets.toml로 복사하고 실제 값으로 채우세요
# 절대 Git에 실제 secrets.toml 파일을 커밋하지 마세요!
#
# Streamlit Cloud에서는 Settings → Secrets UI에서 이 내용을 입력하세요

# ============================================================================
# Authentication (베타 앱 접근 제한)
# ============================================================================
[general]
# 인증된 사용자 목록 (베타 단계: 단일 사용자 또는 소수 사용자)
# Streamlit Cloud에서는 배열 형식으로 입력:
# authorized_users = [{"email": "your-email@example.com", "password": "your-password"}]
authorized_users = [
    {email = "your-email@example.com", password = "your-password-here"}
]

# ============================================================================
# AI/LLM Configuration
# ============================================================================
GEMINI_API_KEY = "your-gemini-api-key-here"
GEMINI_MODEL = "gemini-2.5-flash"

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================
# 방법 1: 전체 연결 문자열 사용 (권장)
DATABASE_URL = "postgresql://user:password@host:port/database"

# 방법 2: 개별 구성 요소 사용 (선택사항)
# DATABASE_HOST = "your-host.com"
# DATABASE_USER = "your-username"
# DATABASE_PASSWORD = "your-password"
# DATABASE_NAME = "your-database"
# DATABASE_PORT = "5432"

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT = "production"
DEBUG = "false"
LOG_LEVEL = "INFO"
